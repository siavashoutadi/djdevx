import os
import environ

from settings import BASE_DIR

LOCAL_ENV_FILE = os.path.join(BASE_DIR, ".environments", "dev")
SWARM_ENV_FILE = os.path.join(os.path.sep, "run", "secrets", "{{ project_name }}-secret")


def get_env():
    env = environ.Env()
    if is_local():
        environ.Env.read_env(LOCAL_ENV_FILE)
    elif is_swarm():
        environ.Env.read_env(SWARM_ENV_FILE)

    return env


def is_local():
    return os.path.exists(LOCAL_ENV_FILE) and not is_docker()


def is_docker():
    return os.path.exists("/.dockerenv")


def is_swarm():
    return is_docker() and os.path.exists(SWARM_ENV_FILE)
